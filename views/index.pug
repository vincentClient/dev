head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='chrome=1')
  title HTML5 Web Terminal
  link(href='https://fonts.googleapis.com/css?family=Inconsolata')
  style
    include includes/css/index.css
body
  div(id='container')
    output
    div(id='input-line' class='input-line')
      div(class='prompt')
      div
        input(class='cmdline' autofocus)
  
  script(src='https://code.jquery.com/jquery-2.1.1.min.js')
  script
    include includes/js/index.js
    include includes/js/indexcodepen.js

  div(class='clock-container')
    svg(viewbox='0 0 100 100')
      circle(cx='50', cy='50', r='45')
      g
        rect.hour(x='47.5', y='12.5', width='5', height='40', rx='2.5', ry='2.55')
        rect.min(x='48.5', y='12.5', width='3', height='40', rx='2', ry='2')
        line.sec(x1='50', y1='50', x2='50', y2='16')